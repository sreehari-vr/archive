<%- include("../../views/partials/admin/header") %>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
</head>
<div class="content-header">
    <div>
        <h2 class="content-title card-title">Coupons</h2>
    </div>
</div>
<header class="card-header text-center mb-20 d-flex gap-5">
    <form action="/admin/coupons" method="get" class="d-inline">
        <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px; margin-left: 230px;">
            <input type="text" class="form-control border-0 rounded-pill" placeholder="Search products or brands" name="search">
            <button class="btn  border-0" type="submit">Search</button>
        </div>
    </form>
    <form action="/admin/addCoupon" method="get" class="d-inline ml-5">
        <button class="btn btn-success border-0" type="submit">Add new</button>
    </form>
</header>
<div class="right mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col"><b>No.</b></th>
                <th scope="col"><b>code</b></th>
                <th scope="col"><b>Description</b></th>
                <th scope="col"><b>discount</b></th>
                <th scope="col"><b>maxDiscount</b></th>
                <th scope="col"><b>expDate</b></th>
                <th scope="col"><b>minPurchase</b></th>
                <th scope="col"><b>usageLimit</b></th>
                <th scope="col"><b>perUserLimit</b></th>
                <th scope="col"><b>Status</b></th>
                <th scope="col"><b>Action</b></th>
            </tr>
        </thead>
        <tbody>
            
            <% for(let i = 0; i < coupon.length; i++) { %>
                            <tr style="height: 150px;">
                                <td><%= i + 1 %></td>
                                <td><%= coupon[i].code %></td>
                                <td style="width: 200px;"><%= coupon[i].description %></td>
                                <td><%= coupon[i].discount %></td>
                                <td><%= coupon[i].maxDiscount %></td>
                                <td><%= coupon[i].expiryDate %></td>
                                <td><%= coupon[i].minPurchase %></td>
                                <td><%= coupon[i].usageLimit %></td>
                                <td><%= coupon[i].perUserLimit %></td>

                                
                                                        
                                    <td>
                                        <% if(coupon[i].isActive === true) { %>
                                            <h5 style="color: rgb(0, 255, 47);">Active</h5>
                                            <% } else { %>
                                            <h5 style="color: rgb(255, 0, 0);">Inactive</h5>
                                            <% } %>      
                                    </td>   

                                    
                                
                                    <td>
                                            <% if (coupon[i].isActive === true) { %>
                                              <button class="btn btn-warning unlist-btn" data-href="/admin/inactivateCoupon?id=<%= coupon[i]._id %>">
                                                Inactivate
                                              </button>
                                            <% } else { %>
                                              <button class="btn btn-success list-btn" data-href="/admin/activateCoupon?id=<%= coupon[i]._id %>">
                                                Activate
                                              </button>
                                            <% } %>                                            
                                          
                                          
                                    <button class="btn btn-success" style="width: 80px;">
                                        <a href="/admin/updateCoupon?id=<%= coupon[i]._id %>" class="text-white" style="text-decoration: none;">Update</a>
                                    </button>
                                    <button class="btn btn-danger delete-btn" style="width: 80px;" data-href="/admin/softDeleteCoupon?id=<%= coupon[i]._id %>">
                                        Delete
                                      </button>
                                </td>
                            </tr>
                            <% } %>
        </tbody>

    </table>
</div>
</div>
</div>






<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script>
  $(document).ready(function () {
    $(".unlist-btn").click(function (event) {
      event.preventDefault();
      const url = $(this).data("href");
      Swal.fire({
        title: "Are you sure?",
        text: "Do you want to inactivate this Coupon?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#d33",
        cancelButtonColor: "#3085d6",
        confirmButtonText: "Yes, unlist!"
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = url; // Navigate to the unlist endpoint
        }
      });
    });

    // SweetAlert for Listing Product
    $(".list-btn").click(function (event) {
      event.preventDefault();
      const url = $(this).data("href");
      Swal.fire({
        title: "Are you sure?",
        text: "Do you want to activate this Coupon?",
        icon: "info",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, list!"
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = url; // Navigate to the list endpoint
        }
      });
    });

    // SweetAlert for Deleting Product
    $(".delete-btn").click(function (event) {
      event.preventDefault();
      const url = $(this).data("href");
      Swal.fire({
        title: "Are you sure?",
        text: "Do you want to delete this Coupon?",
        icon: "error",
        showCancelButton: true,
        confirmButtonColor: "#d33",
        cancelButtonColor: "#3085d6",
        confirmButtonText: "Yes, delete!"
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = url; // Navigate to the delete endpoint
        }
      });
    });
  });
</script>
