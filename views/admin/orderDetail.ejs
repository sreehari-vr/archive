<%- include("../../views/partials/admin/header") %>

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-10 col-xl-8 pt-5">
        <div class="card border-0 shadow-lg">
          <div class="card-header bg-gradient-primary text-white py-3">
            <h2 class="text-center mb-0">Order Details</h2>
          </div>

          <div class="card-body p-4">
            <div class="row g-4">
              <!-- Order Information -->
              <div class="col-12">
                <div class="card border-light">
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-md-6">
                        <p class="mb-1"><i class="bi bi-hash me-2"></i><strong>Order ID:</strong></p>
                        <p class="text-muted">
                          <%= order._id %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <p class="mb-1"><i class="bi bi-person me-2"></i><strong>User:</strong></p>
                        <p class="text-muted">
                          <%= order.userId ? order.userId.name : "Unknown User" %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <p class="mb-1"><i class="bi bi-currency-rupee me-2"></i><strong>Total Amount:</strong></p>
                        <p class="text-muted">₹<%= order.totalAmount %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <p class="mb-1"><i class="bi bi-currency-rupee me-2"></i><strong>Discount:</strong></p>
                        <p class="text-muted">₹<%= order.discount %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <p class="mb-1"><i class="bi bi-credit-card me-2"></i><strong>Payment Method:</strong></p>
                        <p class="text-muted">
                          <%= order.paymentMethod %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <p class="mb-1"><i class="bi bi-calendar me-2"></i><strong>Order Date:</strong></p>
                        <p class="text-muted">
                          <%= order.orderDate.toDateString() %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Status Updates -->
              <div class="col-md-6">
                <div class="card h-100 border-light">
                  <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-truck me-2"></i>Order Status</h5>
                    <select name="orderStatus" class="form-select status-select mt-2" data-type="order"
                      data-order-id="<%= order._id %>">
                      <option disabled selected>Update Order Status</option>
                      <option value="Pending" <%=order.orderStatus==='Pending' ? 'selected' : '' %>>Pending</option>
                      <option value="Shipped" <%=order.orderStatus==='Shipped' ? 'selected' : '' %>>Shipped</option>
                      <option value="Cancelled" <%=order.orderStatus==='Cancelled' ? 'selected' : '' %>>Cancelled
                      </option>
                      <option value="Returned" <%=order.orderStatus==='Returned' ? 'selected' : '' %>>Returned</option>
                      <option value="Delivered" <%=order.orderStatus==='Delivered' ? 'selected' : '' %>>Delivered
                      </option>
                      <option value="Refunded" <%=order.orderStatus==='Refunded' ? 'selected' : '' %>>Refunded</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="card h-100 border-light">
                  <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-wallet2 me-2"></i>Payment Status</h5>
                    <select name="paymentStatus" class="form-select status-select mt-2" data-type="payment"
                      data-order-id="<%= order._id %>">
                      <option disabled selected>Update Payment Status</option>
                      <option value="Pending" <%=order.paymentStatus==='Pending' ? 'selected' : '' %>>Pending</option>
                      <option value="Failed" <%=order.paymentStatus==='Failed' ? 'selected' : '' %>>Failed</option>
                      <option value="Refund" <%=order.paymentStatus==='Refund' ? 'selected' : '' %>>Refund</option>
                      <option value="Paid" <%=order.paymentStatus==='Paid' ? 'selected' : '' %>>Paid</option>
                    </select>
                  </div>
                </div>
              </div>

              <!-- Shipping Address -->
              <div class="col-12">
                <div class="card border-light">
                  <div class="card-body">
                    <h5 class="card-title mb-3"><i class="bi bi-geo-alt me-2"></i>Shipping Address</h5>
                    <div class="row g-3">
                      <div class="col-md-6">
                        <p class="mb-1"><strong>Name:</strong></p>
                        <p class="text-muted">
                          <%= order.address.name %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <p class="mb-1"><strong>Address Type:</strong></p>
                        <p class="text-muted">
                          <%= order.address.addressType %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <p class="mb-1"><strong>City:</strong></p>
                        <p class="text-muted">
                          <%= order.address.city %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <p class="mb-1"><strong>State:</strong></p>
                        <p class="text-muted">
                          <%= order.address.state %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <p class="mb-1"><strong>Landmark:</strong></p>
                        <p class="text-muted">
                          <%= order.address.landMark %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <p class="mb-1"><strong>Pincode:</strong></p>
                        <p class="text-muted">
                          <%= order.address.pincode %>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <p class="mb-1"><strong>Phone:</strong></p>
                        <p class="text-muted">
                          <%= order.address.phone %>
                        </p>
                      </div>
                      <% if (order.address.altPhone) { %>
                        <div class="col-md-6">
                          <p class="mb-1"><strong>Alternate Phone:</strong></p>
                          <p class="text-muted">
                            <%= order.address.altPhone %>
                          </p>
                        </div>
                        <% } %>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Order Items -->
              <div class="col-12">
                <div class="card border-light">
                  <div class="card-body">
                    <h5 class="card-title mb-3"><i class="bi bi-box me-2"></i>Order Items</h5>
                    <div class="table-responsive">
                      <table class="table table-hover">
                        <thead class="table-light">
                          <tr>
                            <th>Product</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-end">Price</th>
                            <th class="text-center">Item Status</th>
                            <th class="text-center">Payment Status</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% order.items.forEach(item=> { %>
                            <tr>
                              <td>
                                <%= item.productId ? item.productId.productName : "Product Not Found" %>
                              </td>
                              <td class="text-center">
                                <%= item.quantity %>
                              </td>
                              <td class="text-end">₹<%= item.price * item.quantity %>
                              </td>
                              <td>
                                <select class="form-select form-select-sm item-status-select"
                                  data-item-id="<%= item._id %>" data-order-id="<%= order._id %>">
                                  <option value="Pending" <%=item.status==='Pending' ? 'selected' : '' %>>Pending
                                  </option>
                                  <option value="Processing" <%=item.status==='Processing' ? 'selected' : '' %>
                                    >Processing</option>
                                  <option value="Shipped" <%=item.status==='Shipped' ? 'selected' : '' %>>Shipped
                                  </option>
                                  <option value="Delivered" <%=item.status==='Delivered' ? 'selected' : '' %>>Delivered
                                  </option>
                                  <option value="Cancelled" <%=item.status==='Cancelled' ? 'selected' : '' %>>Cancelled
                                  </option>
                                  <option value="Returned" <%=item.status==='Returned' ? 'selected' : '' %>>Returned
                                  </option>
                                </select>
                              </td>
                              <td>
                                <select class="form-select form-select-sm item-payment-status-select"
                                  data-item-id="<%= item._id %>" data-order-id="<%= order._id %>">
                                  <option value="Pending" <%=item.paymentStatus==='Pending' ? 'selected' : '' %>>Pending
                                  </option>
                                  <option value="Failed" <%=item.paymentStatus==='Failed' ? 'selected' : '' %>>Failed
                                  </option>
                                  <option value="Refund" <%=item.paymentStatus==='Refund' ? 'selected' : '' %>>Refund
                                  </option>
                                  <option value="Paid" <%=item.paymentStatus==='Paid' ? 'selected' : '' %>>Paid</option>
                                </select>
                              </td>
                            </tr>
                            <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>


              <!-- Back Button -->
              <div class="col-12 text-center">
                <a href="/admin/orders" class="btn btn-primary">
                  <i class="bi bi-arrow-left me-2"></i>Back to Orders
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    $(document).ready(function () {
      $(".status-select").change(function (e) {
        e.preventDefault();

        const status = $(this).val();
        const orderId = $(this).data("order-id");
        const type = $(this).data("type");
        const endpoint = type === "order"
          ? `/admin/orders/${orderId}/update-order-status`
          : `/admin/orders/${orderId}/update-payment-status`;

        Swal.fire({
          title: "Are you sure?",
          text: `Change ${type} status to "${status}"?`,
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes!",
        }).then((result) => {
          if (result.isConfirmed) {
            $.ajax({
              url: endpoint,
              method: "POST",
              data: { status },
              success: (response) => {
                Swal.fire("Updated!", response.message, "success").then(() => {
                  location.reload();
                });
              },
              error: (err) => {
                Swal.fire("Error!", err.responseJSON?.error || "An error occurred", "error");
              },
            });
          } else {
            $(this).val($(this).data("original-status"));
          }
        });
      });

      $(".status-select").focus(function () {
        $(this).data("original-status", $(this).val());
      });
    });
  </script>

  <%- include("../../views/partials/admin/footer") %>