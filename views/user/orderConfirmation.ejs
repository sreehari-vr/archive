<%- include("../../views/partials/user/header") %>

<style>
    .order-confirmation {
        max-width: 800px;
        margin: 3rem auto;
        padding: 2.5rem;
        background: #ffffff;
        border-radius: 16px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    /* Success checkmark animation */
    .order-confirmation::before {
        content: '✓';
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        font-size: 1.5rem;
        width: 50px;
        height: 50px;
        background: #4CAF50;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: slideDown 0.5s ease-out;
    }
    
    @keyframes slideDown {
        from {
            transform: translate(-50%, -100%);
        }
        to {
            transform: translate(-50%, 0);
        }
    }
    
    .order-confirmation h1 {
        color: #2c3e50;
        font-size: 2rem;
        font-weight: 700;
        margin: 2.5rem 0 1rem;
        padding-top: 1rem;
    }
    
    .order-confirmation p {
        color: #666;
        font-size: 1.1rem;
        margin-bottom: 1rem;
        line-height: 1.6;
    }
    
    /* Order ID styling */
    .order-confirmation p:nth-of-type(2) {
        font-family: monospace;
        background: #f8f9fa;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        display: inline-block;
        margin: 1.5rem 0;
        border: 1px dashed #dee2e6;
        color: #495057;
        font-size: 0.95rem;
    }
    
    /* Items list */
    .order-confirmation ul {
        list-style: none;
        padding: 0;
        margin: 2rem auto;
        max-width: 600px;
        text-align: left;
        border-top: 1px solid #eee;
        border-bottom: 1px solid #eee;
        padding: 1.5rem 0;
    }
    
    .order-confirmation ul li {
        padding: 1rem 1.5rem;
        margin: 0.5rem 0;
        background: #f8f9fa;
        border-radius: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 1rem;
        color: #495057;
        transition: all 0.2s ease;
    }
    
    .order-confirmation ul li:hover {
        transform: translateX(5px);
        background: #f1f3f5;
    }
    
    /* Product quantity styling */
    .order-confirmation ul li::before {
        content: '×';
        margin-right: 0.5rem;
        color: #adb5bd;
    }
    
    /* Total amount styling */
    .order-confirmation p:last-child {
        font-size: 1.4rem;
        font-weight: 600;
        color: #2c3e50;
        margin-top: 2rem;
        padding: 1rem;
        background: linear-gradient(to right, #f8f9fa, white, #f8f9fa);
        border-radius: 8px;
    }
    
    /* Price styling */
    .order-confirmation ul li span:last-child,
    .order-confirmation p:last-child span {
        color: #2c3e50;
        font-weight: 600;
    }
    
    /* Print styles */
    @media print {
        .order-confirmation {
            box-shadow: none;
            border: 1px solid #ddd;
        }
    
        .order-confirmation::before {
            display: none;
        }
    
        .order-confirmation ul li {
            background: none;
            border: 1px solid #eee;
        }
    }
    
    /* Responsive styles */
    @media (max-width: 768px) {
        .order-confirmation {
            margin: 1rem;
            padding: 1.5rem;
        }
    
        .order-confirmation h1 {
            font-size: 1.75rem;
        }
    
        .order-confirmation ul li {
            padding: 0.75rem 1rem;
            font-size: 0.95rem;
            flex-direction: column;
            align-items: flex-start;
        }
    
        .order-confirmation ul li span:last-child {
            margin-top: 0.5rem;
            padding-left: 1.5rem;
        }
    }
    
    /* Success animation */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .order-confirmation > * {
        animation: fadeInUp 0.5s ease-out forwards;
        opacity: 0;
    }
    
    .order-confirmation > *:nth-child(1) { animation-delay: 0.1s; }
    .order-confirmation > *:nth-child(2) { animation-delay: 0.2s; }
    .order-confirmation > *:nth-child(3) { animation-delay: 0.3s; }
    .order-confirmation > *:nth-child(4) { animation-delay: 0.4s; }
    .order-confirmation > *:nth-child(5) { animation-delay: 0.5s; }
    
    /* Hover effects for interactivity */
    .order-confirmation:hover {
        transform: translateY(-2px);
        transition: transform 0.3s ease;
    }
    
    /* Additional decorative elements */
    .order-confirmation::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(to right, #4CAF50, #45b649);
    }
</style>
<div class="order-confirmation">
    <h1>Order Confirmed</h1>
    <p>Thank you for your purchase!</p>
    <p>Order ID: <%= order._id %></p>
    <ul>
      <% order.items.forEach(item => { %>
        <li><%= item.quantity %> x <%= item.productId.productName %> - ₹<%= item.price %></li>
      <% }) %>
    </ul>
    <p>Total Amount: ₹<%= order.totalAmount %></p>
    <a href="/shop" class="btn btn-primary">Back to shop</a>
  </div>
  <%- include("../../views/partials/user/footer") %>
  