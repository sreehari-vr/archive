<%- include('../../views/partials/user/header') %>

<style>
    .zoom-container {
        position: relative;
        width: 550px; 
        height: 550px;
        overflow: hidden; 
        border: 1px solid #ccc;
        border-radius: 8px;
    }
    #zoomable-image {
        transition: transform 0.3s ease; 
    }
    
</style>

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="bread"><span><a href="/">Home</a></span> / <span>Product Details</span></p>
            </div>
        </div>
    </div>
</div>

<div class="colorlib-product">
    <div class="container">
        <div class="row row-pb-lg product-detail-wrap">
            <div class="col-sm-8">
                <div class="zoom-container" onmousemove="zoomIn(event)" onmouseleave="resetZoom()">
                    <img id="zoomable-image" alt="zoomable-image" class="rounded-lg"
                        height="550" width="550"
                        src="<%= product.productImage && product.productImage.length ? '/' + product.productImage[0].replace(/\\/g, '/') : 'images/no_productImage.png' %>" />
                </div>

                <div class="slider-nav-thumbnails mt-3 d-flex">
                    <% product.productImage.forEach((image, index) => { %>
                        <img alt="Thumbnail <%= index %>" class="thumbnail rounded-lg me-2"
                            height="100" width="100" src="/<%= image.replace(/\\/g, '/') %>"
                            onclick="updateMainImage(this, '<%= image.replace(/\\/g, '/') %>')" />
                    <% }); %>
                </div>
            </div>

            <div class="col-sm-4">
                <div class="product-desc">
                    <h3><%= product.productName %></h3>
                    <p class="price">
                        <span>₹<%= product.salePrice %></span>
                        <span class="rate">
                            <i class="icon-star-full"></i>
                            <i class="icon-star-full"></i>
                            <i class="icon-star-full"></i>
                            <i class="icon-star-full"></i>
                            <i class="icon-star-half"></i>
                            (74 Ratings)
                        </span>
                    </p>
                    <p><%= product.description %></p>

                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <% if (product.quantity > 0) { %>
                                <form action="/cart/<%= product._id %>" method="POST" class="d-inline">
                                    <h4 style="color: coral;">Stock Left: <%= product.quantity %></h4>
                                    <div class="input-group mb-4">
                                        <button type="button" class="quantity-left-minus btn" data-type="minus">
                                            <i class="icon-minus2"></i>
                                        </button>
                                        <input type="text" id="quantity" name="quantity" class="form-control input-number"
                                            value="1" min="1" max="<%= product.quantity <= 10 ? product.quantity : 10 %>" readonly>
                                        <button type="button" class="quantity-right-plus btn" data-type="plus">
                                            <i class="icon-plus2"></i>
                                        </button>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-addtocart">
                                        <i class="icon-shopping-cart"></i> Add to Cart
                                    </button>
                                </form>
                            <% } else { %>
                                <h2 style="color: red;">Out of Stock</h2>
                            <% } %>
                            
                        </div>
                        <div>
                            <form action="/wishlist/<%=product._id%>" method="post">
                                <button type="submit" class="btn btn-primary btn-addtocart">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                        <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"/>
                                      </svg> Add to Wishlist
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <h2 class="text-center mb-4">Related Products</h2>
                <div class="row">
                    <% relatedProducts.forEach(relatedProduct => { %>
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="product-entry border">
                                <a href="/productDetail/<%= relatedProduct._id %>" class="prod-img">
                                    <img src="/<%= relatedProduct.productImage[0] ? relatedProduct.productImage[0].replace(/\\/g, '/') : 'default-image.jpg' %>"
                                        class="img-fluid" alt="<%= relatedProduct.productName %>">
                                </a>
                                <div class="desc">
                                    <h2><a href="/product/<%= relatedProduct._id %>"><%= relatedProduct.productName %></a></h2>
                                    <span class="price">₹<%= relatedProduct.salePrice %></span>
                                </div>
                                <% if (relatedProduct.quantity > 0) { %>
                                    <p class="text-center">
                                        <a href="#" class="btn btn-primary btn-sm add-to-cart" data-product-id="<%= relatedProduct._id %>">
                                            <i class="icon-shopping-cart"></i> Add to Cart
                                        </a>
                                    </p>
                                <% } else { %>
                                    <p class="text-center text-danger">Out of Stock</p>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    function updateMainImage(selectedThumbnail, imageSrc) {
        document.getElementById('zoomable-image').src = '/' + imageSrc;

        document.querySelectorAll('.thumbnail').forEach(thumbnail => {
            thumbnail.classList.remove('active');
        });
        selectedThumbnail.classList.add('active');
    }

    const zoomFactor = 1.8;

    function zoomIn(event) {
        const zoomableImage = document.getElementById('zoomable-image');
        const rect = zoomableImage.getBoundingClientRect();
        const x = event.clientX - rect.left;
        const y = event.clientY - rect.top;

        const originX = (x / rect.width) * 100;
        const originY = (y / rect.height) * 100;

        zoomableImage.style.transformOrigin = `${originX}% ${originY}%`;
        zoomableImage.style.transform = `scale(${zoomFactor})`;
    }

    function resetZoom() {
        const zoomableImage = document.getElementById('zoomable-image');
        zoomableImage.style.transform = 'scale(1)';
    }

    document.addEventListener("DOMContentLoaded", function () {
        const quantityInput = document.getElementById("quantity");
        const btnMinus = document.querySelector(".quantity-left-minus");
        const btnPlus = document.querySelector(".quantity-right-plus");

        btnMinus.addEventListener("click", function () {
            let currentQuantity = parseInt(quantityInput.value);
            if (currentQuantity > parseInt(quantityInput.min)) {
                quantityInput.value = currentQuantity - 1;
            }
        });

        btnPlus.addEventListener("click", function () {
            let currentQuantity = parseInt(quantityInput.value);
            if (currentQuantity < parseInt(quantityInput.max)) {
                quantityInput.value = currentQuantity + 1;
            }
        });
    });
</script>

<%- include('../../views/partials/user/footer') %>
