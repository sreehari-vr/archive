<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verify Your Email</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.12/sweetalert2.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f0f2f5;
        display: flex;
        align-items: center;
        min-height: 100vh;
      }
      .otp-container {
        background-color: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      }
      .otp-header {
        background-color: #88c8bc;
        color: white;
        padding: 2rem;
        text-align: center;
      }
      .otp-form {
        padding: 2rem;
      }
      .form-control {
        text-align: center;
        font-size: 1.5rem;
        letter-spacing: 0.5rem;
      }
      .timer {
        font-size: 0.875rem;
        color: #718096;
        margin-top: 0.5rem;
      }
      .verify-btn {
        background-color: #88c8bc;
      }
      .verify-btn:hover {
        background-color: #48857a;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="otp-container">
            <div class="otp-header">
              <h1>Verify Your Email</h1>
              <p>Enter the 6-digit code sent to your email</p>
            </div>
            <div class="otp-form">
              <form id="otpForm" onsubmit="return validateOTPForm()">
                <div class="mb-4">
                  <input
                    type="text"
                    class="form-control"
                    id="otpInput"
                    name="otpInput"
                    placeholder="000000"
                    maxlength="6"
                    required
                  />
                </div>
                <div class="d-grid mb-3">
                  <button type="submit" class="btn btn-primary verify-btn">
                    Verify Email
                  </button>
                </div>
              </form>
              <div class="text-center">
                <div class="timer" id="timer">Resend OTP in: 01:00</div>
                <button id="resendBtn" class="btn btn-link" disabled>
                  Resend OTP
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.12/sweetalert2.all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>

      document.getElementById("otpInput").addEventListener("input", () => {
        const otpInput = document.getElementById("otpInput");
        const verifyBtn = document.querySelector(".verify-btn");
      
        otpInput.value = otpInput.value.replace(/[^0-9]/g, "");
      
        if (otpInput.value.length !== 6) {
          verifyBtn.disabled = true;
        }
      });
      
      



      document
        .getElementById("resendBtn")
        .addEventListener("click", async () => {
          try {
            const response = await axios.post(
              "http://localhost:3000/resend-otp"
            );

            if (response.data.success) {
              Swal.fire({
                icon: "success",
                title: "OTP Resent",
                text: response.data.message,
                showConfirmButton: false,
                timer: 1500,
              });
              startTimer(); 
            } else {
              Swal.fire({
                icon: "error",
                title: "Error",
                text: response.data.message,
              });
            }
          } catch (error) {
            Swal.fire({
              icon: "error",
              title: "Failed to Resend OTP",
              text: "Please try again later",
            });
          }
        });

      function startTimer() {
        let timeLeft = 10; 
        
        const timerElement = document.getElementById("timer");
        const resendBtn = document.getElementById("resendBtn");
        const verifyBtn = document.querySelector(".verify-btn"); 


        resendBtn.disabled = true; 
        verifyBtn.disabled = false; 


        const timerId = setInterval(() => {
          const minutes = Math.floor(timeLeft / 60);
          let seconds = timeLeft % 60;
          seconds = seconds < 10 ? "0" + seconds : seconds;
          timerElement.textContent = `Resend OTP in: ${minutes}:${seconds}`;

          if (timeLeft === 0) {
            clearInterval(timerId);
            timerElement.textContent = "You can now resend OTP";
            resendBtn.disabled = false; 
            verifyBtn.disabled = true; 
          } else {
            timeLeft--;
          }
        }, 1000);
      }

      function resetTimer() {
        document.getElementById("timer").textContent = "";
        startTimer();
      }

      startTimer(); 

      document
        .getElementById("otpForm")
        .addEventListener("submit", async (e) => {
          e.preventDefault();
          const otpInput = document.getElementById("otpInput").value;
          try {
            const response = await axios.post(
              "http://localhost:3000/verify-otp",
              { otpInput },
              { headers: { ContentType: "application/json" } }
            );
            Swal.fire({
              icon: "success",
              title: "OTP Verified Successfully",
              showConfirmButton: false,
              timer: 1500,
            }).then(() => {
              window.location.href = response.data.redirectUrl;
            });
          } catch (error) {
            Swal.fire({
              icon: "error",
              title: "Invalid OTP",
              text: "Please try again",
            });
          }
        });
    </script>
  </body>
</html>
